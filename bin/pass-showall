#!/usr/bin/env bash
# vim: et sw=4 ts=4:

cd $HOME/.password-store

git ls-tree -r --name-only HEAD | grep /password.gpg | while read filename; do
    passname=${filename%.gpg}
    echo -n $passname
    echo -ne \\t
    echo -n $(pass show $passname 2>/dev/null)
    echo -ne \\t
    echo -n $(pass git log -1 --format='%aI' -- $filename)
    echo
done

